<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCVPrueb2.View.frmPruebaFTP">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label
                x:Name="lblTitulo"
                Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                IsVisible="false"
                Margin="0,0,0,0"/>
            <Image
                x:Name="imgPromo"
                HeightRequest="400"/>
            <Button
                Text="Run"
                Clicked="Button_Clicked"
                />
            <Entry
                x:Name="entPrueba1"
                Placeholder="Hola gente"
                Completed="entPrueba1_Completed"
                Opacity="0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>